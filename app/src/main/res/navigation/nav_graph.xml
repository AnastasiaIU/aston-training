<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactsListFragment">

    <fragment
        android:id="@+id/contactsListFragment"
        android:name="com.example.astontraining.contactslist.ContactsListFragment"
        android:label="@string/contacts_list_fragment_label"
        tools:layout="@layout/fragment_contacts_list" >
        <action
            android:id="@+id/action_contactsListFragment_to_contactDetailFragment"
            app:destination="@id/contactDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.example.astontraining.contactdetail.ContactDetailFragment"
        android:label="@string/contact_detail_fragment_label"
        tools:layout="@layout/fragment_contact_detail" >
        <action
            android:id="@+id/action_contactDetailFragment_to_contactsListFragment"
            app:destination="@id/contactsListFragment" />
        <argument
            android:name="contact_id"
            app:argType="integer" />
    </fragment>
</navigation>